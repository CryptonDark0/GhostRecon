{
  "project_name": "GhostRecon",
  "version": "1.0.0",
  "design_philosophy": {
    "theme": "Tactical Stealth",
    "core_principles": [
      "Zero Distraction: Interfaces are dark, minimal, and high-contrast.",
      "Information Density: Use dense grids and monospaced data displays.",
      "Tactical Feedback: Instant response, sharp borders, technical aesthetic.",
      "Trust through Transparency: Visualise encryption status and key verification."
    ],
    "mood_keywords": ["Stealth", "Encrypted", "Military", "Terminal", "Cyberpunk"]
  },
  "colors": {
    "palette": {
      "void_black": "#050505",
      "gunmetal": "#121212",
      "armour_grey": "#1F1F1F",
      "terminal_green": "#00FF41",
      "alert_amber": "#FFB000",
      "critical_red": "#FF3B30",
      "ghost_white": "#E5E5E5",
      "stealth_grey": "#525252",
      "muted_text": "#A3A3A3"
    },
    "semantic": {
      "background": {
        "primary": "#050505",
        "secondary": "#121212",
        "tertiary": "#1F1F1F",
        "modal": "#121212"
      },
      "text": {
        "primary": "#E5E5E5",
        "secondary": "#A3A3A3",
        "tertiary": "#525252",
        "accent": "#00FF41",
        "alert": "#FFB000",
        "danger": "#FF3B30"
      },
      "border": {
        "subtle": "#333333",
        "active": "#00FF41",
        "error": "#FF3B30"
      },
      "status": {
        "online": "#00FF41",
        "offline": "#525252",
        "away": "#FFB000",
        "busy": "#FF3B30",
        "encrypted": "#00FF41",
        "unsecured": "#FF3B30"
      }
    }
  },
  "typography": {
    "font_families": {
      "primary": "System",
      "monospace": "System Monospace"
    },
    "sizes": {
      "xs": 10,
      "sm": 12,
      "base": 14,
      "lg": 16,
      "xl": 20,
      "2xl": 24,
      "3xl": 32,
      "4xl": 48
    },
    "weights": {
      "regular": "400",
      "medium": "500",
      "bold": "700",
      "black": "900"
    },
    "usage": {
      "h1": { "size": 32, "weight": "700", "family": "monospace", "tracking": -1 },
      "h2": { "size": 24, "weight": "700", "family": "monospace", "tracking": -0.5 },
      "h3": { "size": 20, "weight": "600", "family": "monospace" },
      "body": { "size": 14, "weight": "400", "family": "primary" },
      "caption": { "size": 12, "weight": "400", "family": "monospace", "color": "#A3A3A3" },
      "label": { "size": 10, "weight": "700", "family": "monospace", "uppercase": true, "tracking": 1 }
    }
  },
  "spacing": {
    "xs": 4,
    "sm": 8,
    "md": 16,
    "lg": 24,
    "xl": 32,
    "2xl": 48,
    "3xl": 64,
    "layout": {
      "screen_padding": 16,
      "card_padding": 16,
      "gap": 12
    }
  },
  "borders": {
    "radius": {
      "none": 0,
      "sm": 2,
      "md": 4,
      "lg": 8,
      "full": 9999
    },
    "width": {
      "hairline": 0.5,
      "thin": 1,
      "thick": 2
    }
  },
  "components": {
    "button": {
      "base_style": {
        "height": 48,
        "borderRadius": 2,
        "justifyContent": "center",
        "alignItems": "center",
        "flexDirection": "row",
        "gap": 8
      },
      "variants": {
        "primary": {
          "backgroundColor": "#00FF41",
          "borderWidth": 0
        },
        "primary_text": {
          "color": "#050505",
          "fontWeight": "700",
          "fontFamily": "monospace"
        },
        "secondary": {
          "backgroundColor": "transparent",
          "borderWidth": 1,
          "borderColor": "#00FF41"
        },
        "secondary_text": {
          "color": "#00FF41",
          "fontWeight": "600",
          "fontFamily": "monospace"
        },
        "destructive": {
          "backgroundColor": "transparent",
          "borderWidth": 1,
          "borderColor": "#FF3B30"
        },
        "destructive_text": {
          "color": "#FF3B30",
          "fontWeight": "600",
          "fontFamily": "monospace"
        },
        "ghost": {
          "backgroundColor": "transparent"
        },
        "ghost_text": {
          "color": "#E5E5E5"
        }
      }
    },
    "input": {
      "container": {
        "backgroundColor": "#121212",
        "borderWidth": 1,
        "borderColor": "#333333",
        "borderRadius": 2,
        "paddingHorizontal": 12,
        "height": 48,
        "color": "#E5E5E5",
        "fontFamily": "monospace"
      },
      "focus": {
        "borderColor": "#00FF41"
      },
      "error": {
        "borderColor": "#FF3B30"
      }
    },
    "card": {
      "container": {
        "backgroundColor": "#121212",
        "borderWidth": 1,
        "borderColor": "#1F1F1F",
        "padding": 16,
        "borderRadius": 0
      }
    },
    "list_item": {
      "container": {
        "paddingVertical": 16,
        "borderBottomWidth": 1,
        "borderBottomColor": "#1F1F1F",
        "flexDirection": "row",
        "alignItems": "center"
      }
    }
  },
  "assets": {
    "images": {
      "onboarding_hero": "https://images.pexels.com/photos/6330644/pexels-photo-6330644.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940",
      "secure_background": "https://images.pexels.com/photos/30766684/pexels-photo-30766684.png?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940",
      "decoy_calculator_bg": "black",
      "map_dark_mode": "mapbox://styles/mapbox/dark-v10"
    },
    "icons": {
      "library": "lucide-react-native",
      "common": {
        "settings": "Settings",
        "chat": "MessageSquare",
        "call": "Phone",
        "video": "Video",
        "lock": "Lock",
        "shield": "Shield",
        "fingerprint": "Fingerprint",
        "bomb": "Bomb",
        "wipe": "Trash2",
        "eye": "Eye",
        "eye_off": "EyeOff",
        "menu": "Menu",
        "back": "ChevronLeft",
        "send": "Send",
        "more": "MoreVertical",
        "check": "Check",
        "x": "X",
        "plus": "Plus",
        "search": "Search"
      }
    }
  },
  "react_native_guidelines": {
    "styling": "Use StyleSheet.create({}) for all styles. Do not use inline styles for complex objects.",
    "layout": "Use Flexbox. Default flexDirection is column. Use SafeAreaView for root containers.",
    "text": "Wrap all strings in <Text> components. Text does not inherit styles by default in RN.",
    "touchables": "Use TouchableOpacity or Pressable for interactive elements.",
    "navigation": "Use React Navigation (Stack/Tab).",
    "theme_support": "Hardcode Dark Mode for this MVP as per strict theme requirements.",
    "safe_area": "Always wrap top-level screens in SafeAreaView with backgroundColor='#050505'."
  },
  "instructions_to_main_agent": {
    "theme_enforcement": "Strictly adhere to the dark/green/amber palette. No white backgrounds.",
    "component_usage": "Build reusable components in /app/frontend/components/ui/ matching the specs in 'components' key.",
    "navigation_structure": "Setup a BottomTabNavigator for main flow (Chats, Calls, Contacts, Settings) and StackNavigator for flows (Onboarding, ChatDetail).",
    "decoy_mode": "Implement a 'DecoyScreen' that looks like a Calculator. Entering a specific code navigates to the real App.",
    "panic_button": "A global floating action button or gesture (e.g., shake device) to trigger quick wipe (mocked function).",
    "encryption_viz": "In ChatDetail, show a 'Locked' icon and a changing hash code in the header to visualize 'encryption'.",
    "mock_data": "Use realistic mock data for contacts and chats with military/agency terminology (e.g., 'Agent K', 'Asset #4', 'Operation Dawn').",
    "testing": "Add testID props to all interactive elements."
  },
  "universal_guidelines": {
    "design": "Avoid gradients on text. Use solid high-contrast colors. Use 1px borders to define areas.",
    "interaction": "Add activeOpacity={0.7} to TouchableOpacity.",
    "lists": "Use FlatList for performance. Add keyExtractor.",
    "forms": "KeyboardAvoidingView is mandatory for forms."
  }
}