{
  "expo": {
    "name": "GhostRecon",
    "slug": "ghostrecon",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "ghostrecon",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ghostrecon.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Make encrypted video calls",
        "NSMicrophoneUsageDescription": "Make encrypted voice calls",
        "NSContactsUsageDescription": "Find contacts in your network",
        "NSFaceIDUsageDescription": "Unlock app with biometrics",
        "NSPhotoLibraryUsageDescription": "Set disappearing profile photo",
        "UIBackgroundModes": ["remote-notification"]
      },
      "config": {
        "usesNonExemptEncryption": true
      }
    },
    "android": {
      "package": "com.ghostrecon.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#050505"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "READ_CONTACTS",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED",
        "USE_BIOMETRIC",
        "USE_FINGERPRINT"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#050505"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#00FF41"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "3e15c5bd-e418-43b6-b7de-788ebdd6511b"
      },
      "API_URL": "https://ghostrecon-4.onrender.com/api"
    }
  }
}
